@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="text-align:center">
    <h1>Babbitt Nelson Engineering</h1>
    <p class="lead"></p>
    <img src="~/Content/Images/BNE-Logo-color.png" width="400"/> <br /><br />
    <p>@Html.ActionLink("Submit a proposal request","Create","Requests",null, new{@class="btn btn-primary btn-lg"})</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Request Proposal</h2>
        <p>
            Here you will submit the clients information so that we can get started on the project! 
        </p>
        <p><a class="btn btn-default" href="~/Requests/Index">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>View Proposal Status</h2>
        <p>Once a project has been started, check here to see what the current status of the project is!</p>
        <p><a class="btn btn-default" href="~/Proposals/Index">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Manage Clients</h2>
        <p>View a list of all clients, and edit their information!</p>
        <p><a class="btn btn-default" href="~/Clients/Index">Learn more &raquo;</a></p>
    </div>
    
</div>