@model IEnumerable<Project_1.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Clients</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
